		<semantic:titleHeading>
			<Title text="FundSubTypes_001_new"/>
		</semantic:titleHeading>
		<!-- Header Content -->
		<semantic:headerContent></semantic:headerContent>
		<!-- Content -->
		<semantic:content>
			<Panel class="sapUiContentPadding">
				<f:SimpleForm id="formFundSubTypes_001_new" editable="true" layout="ResponsiveGridLayout" title="{i18n>newItem}" labelSpanXL="3"
					labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0"
					columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
					<f:content>
						<Label required="true" text="{i18n>IDFundSubType}"/>
						<Input value="{HelpValues>/FundSubTypes_001_new/ID}"></Input>
						<Label text="{i18n>IDFundType}" required="true"/>
