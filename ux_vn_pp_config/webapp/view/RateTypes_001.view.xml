<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:table="sap.ui.table" xmlns:fb="sap.ui.comp.filterbar"
	xmlns:semantic="sap.f.semantic" controllerName="vn.pp.ux_vn_pp_config.controller.RateTypes_001" xmlns:html="http://www.w3.org/1999/xhtml">
	<semantic:SemanticPage id="RateTypes_001" headerPinnable="false" toggleHeaderOnTitleClick="true" preserveHeaderStateOnScroll="false"
		headerExpanded="false" titleAreaShrinkRatio="1:1.6:1.6" showFooter="true">
		<!-- Title Heading-->
		<semantic:titleHeading>
			<Title text="RateTypes_001"/>
		</semantic:titleHeading>
		<!-- Header Content -->
		<semantic:headerContent>
			<fb:FilterBar reset="onReset" search="onSearch" showRestoreButton="false" showClearButton="false">
				<fb:filterGroupItems>
					<fb:FilterGroupItem groupName="_RateTypes_001" name="A" label="{i18n>rateType}" labelTooltip="{i18n>rateType}" partOfCurrentVariant="true"
						visibleInFilterBar="true">
						<fb:control>
							<ComboBox id="cbId" items="{ path: 'modeloConfig>/RateTypes_001', templateSharable: false }">
								<core:Item key="{modeloConfig>rate}" text="{modeloConfig>rate}"/>
							</ComboBox>
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>
		</semantic:headerContent>
		<!-- Content -->
		<semantic:content>
			<table:Table visibleRowCountMode="Auto" id="tableRateTypes_001"
				rows="{path: 'modeloConfig>/RateTypes_001', parameters : {$$updateGroupId : 'RateTypes_001'}}" selectionMode="MultiToggle" paste="onPaste"
				ariaLabelledBy="title">
				<table:extension>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://delete" tooltip="{i18n>btnDel}" id="btnDel" press="onDelRecord"/>
						<Button icon="sap-icon://add" tooltip="{i18n>btnAdd}" id="btnAdd" press="onNewRecord"/>
						<ToolbarSeparator/>
						<Button icon="sap-icon://excel-attachment" tooltip="{i18n>btnExcel}" id="btnExcel" press="onDataExport"/>
					</OverflowToolbar>
				</table:extension>
				<table:columns>
					<table:Column sortProperty="rate" filterProperty="rate">
						<Label text="{i18n>rateType}" tooltip="{i18n>rateType}"/>
						<table:template>
							<Text text="{modeloConfig>rate}" wrapping="false"/>
						</table:template>
					</table:Column>
					<table:Column sortProperty="active" filterProperty="active">
						<Label text="{i18n>active}" tooltip="{i18n>active}"/>
						<table:template>
							<CheckBox id="cbactive" select="onactive" selected="{modeloConfig>active}"/>
						</table:template>
					</table:Column>
				</table:columns>
			</table:Table>
		</semantic:content>
		<!-- Semantic Footer Buttons -->
		<semantic:footerMainAction>
			<semantic:FooterMainAction id="saveAction" text="{i18n>txtGuardar}" press="onSave"/>
		</semantic:footerMainAction>
		<semantic:footerCustomActions>
			<Button id="cancelAction" text="{i18n>txtDescartar}" press="onDiscard"/>
		</semantic:footerCustomActions>
	</semantic:SemanticPage>
</mvc:View>