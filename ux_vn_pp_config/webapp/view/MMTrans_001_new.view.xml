<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:table="sap.ui.table" xmlns:fb="sap.ui.comp.filterbar"
	xmlns:semantic="sap.f.semantic" xmlns:f="sap.ui.layout.form" controllerName="vn.pp.ux_vn_pp_config.controller.MMTrans_001_new"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<semantic:SemanticPage id="MMTrans_001_new" headerPinnable="false" toggleHeaderOnTitleClick="true" preserveHeaderStateOnScroll="false"
		headerExpanded="false" titleAreaShrinkRatio="1:1.6:1.6" showFooter="true">
		<!-- Title Heading-->
		<semantic:titleHeading>
			<Title text="MMTrans_001_new"/>
		</semantic:titleHeading>
		<!-- Header Content -->
		<semantic:headerContent></semantic:headerContent>
		<!-- Content -->
		<semantic:content>
			<Panel class="sapUiContentPadding">
				<f:SimpleForm id="formMMTrans_001" editable="true" layout="ResponsiveGridLayout" title="{i18n>newItem}" labelSpanXL="3" labelSpanL="3"
					labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1"
					columnsL="1" columnsM="1" singleContainerFullSize="false">
					<f:content>
						<Label text="{i18n>sapWERKS}" required="true"/>
						<Select id="iWerks_MMTrans_001_new" selectedKey="{HelpValues>/MMTrans_001_new/center}"
							items="{ path: 'HelpValues>/SelectedWerks', templateSharable: 'false' }">
							<core:Item key="{HelpValues>Werks}" text="{HelpValues>Werks}: {HelpValues>Name1}"/>
						</Select>
						<Label text="{i18n>finCode}" required="true"/>
						<Select id="iFinCode_MMTrans_001_new" selectedKey="{HelpValues>/MMTrans_001_new/finServ_finCode}"
							items="{ path: 'modeloConfig>/FinSrvs_001', templateSharable: 'false' }">
							<core:Item key="{modeloConfig>finCode}" text="{modeloConfig>finCode}: {modeloConfig>description}"/>
						</Select>
						<Label text="{i18n>flagUpdTable}"/>
						<CheckBox selected="{HelpValues>/MMTrans_001_new/flagUpdTable}"/>
					</f:content>
				</f:SimpleForm>
				<List id="listMMTrans_001_new" visible="false"
					items="{ path: 'modeloConfig>/MMTrans_001', parameters : {$$updateGroupId : 'MMTrans_001_new'}, filters : [ { path : 'center', operator : 'EQ', value1 : 'XXXX'} ]}">
					<StandardListItem title="{modeloConfig>center}"/>
				</List>
			</Panel>
		</semantic:content>
		<!-- Semantic Footer Buttons -->
		<semantic:footerMainAction>
			<semantic:FooterMainAction id="saveAction" text="{i18n>txtGuardar}" press="onSave"/>
		</semantic:footerMainAction>
		<semantic:footerCustomActions>
			<Button id="cancelAction" text="{i18n>txtDescartar}" press="onDiscard"/>
		</semantic:footerCustomActions>
	</semantic:SemanticPage>
</mvc:View>